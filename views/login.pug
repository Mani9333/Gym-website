extends base.pug

block scripts
  script(src='/static/index.js')

block style
    style
      include ../static/style.css
      include ../static/styleContact.css

block content
    div.container
        h1 Login
        form(action="/login", method="post", class="myForm")
            input(type="text", class="myInput", name="name", placeholder="Enter your username")
            input(type="password", class="myInput", name="password", placeholder="Enter your password")
            button(class="btn")
                | Login
            button(type="button", class="btn") #[a(href="/signup") Make a new account]